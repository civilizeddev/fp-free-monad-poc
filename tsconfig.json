{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "./dist",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "Node",
    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "build/**/*.ts",
    "dist/**/*.ts",
    "node_modules/**/*.ts"
  ]
}